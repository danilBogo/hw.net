@model TimMovie.Core.DTO.Messages.MessageDto

@{
    Layout = null;
}

@if (Model.ToUser)
{
<div class="d-flex justify-content-end mb-2 mt-1">
    <div class="chat-in-page__sent-messages">@Model.Content</div>
</div>
}
else
{
<div class="d-flex mb-2 mt-1">
    <div class="chat-in-page__received-messages">@Model.Content</div>
</div>
}