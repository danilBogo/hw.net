@model TimMovie.Web.ViewModels.Films.PersonFilmViewModel

@{
    Layout = null;
}

<div class="mt-3">
    <a asp-controller="Film" asp-action="Film" asp-route-filmId="@Model.Id" class="d-flex justify-content-between">
        <div class="d-flex">
            <img class="person-film_image" alt="" src="@Model.Image"/>
            <div class="d-flex flex-column justify-content-center ms-3">
                <div class="fw-bold">@Model.Year</div>
                <div class="person-film_title mt-1">@Model.Title</div>
                <div class="person-film_rating mt-2">Рейтинг: <span class="fw-bold">@Model.Rating</span></div>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <div class="person-film_watch-film-btn">Смотреть</div>
        </div>
    </a>
</div>
