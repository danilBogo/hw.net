@model TimMovie.Web.ViewModels.Account.RegistrationViewModel
@{
    Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/RegistrationStyle.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body>
<div class="container-xl registration-container">
    <div class="register-form-container">
        <form method="post" asp-action="Registration">
            <div class="reg-title">
                <h1 class="form-title">
                    Регистрация
                </h1>
            </div>
            <div class="form-fields">
                <div class="form-field">
                    <span asp-validation-for="Email"></span>
                    <input type="email" placeholder="Почта" class="input-field" asp-for="Email">
                </div>
                
                <div class="form-field">
                    <span asp-validation-for="UserName"></span>
                    <input type="text" placeholder="Логин" class="input-field" asp-for="UserName">
                </div>
                
                <div class="form-field">
                    <span asp-validation-for="Password"></span>
                    <input type="password" placeholder="Пароль" class="input-field" asp-for="Password">
                </div>
                
                <div class="form-field">
                    <span asp-validation-for="ConfirmPassword"></span>
                    <input type="password" placeholder="Подтвердите пароль" class="input-field" asp-for="ConfirmPassword">
                </div>
                
                @Html.ValidationMessage("CustomError", new { style = "color:red" })
            </div>
            <div asp-validation-summary="ModelOnly" style="color: #a60303"></div>
            <div class="form-buttons mt-4">
                <button class="button">
                    <span>Зарегистрироваться</span>
                </button>
                <div class="divider">или</div>
            </div>
        </form>
        <form method="post" asp-action="RegisterByVk" asp-route-returnUrl="/" asp-route-provider="VK">
