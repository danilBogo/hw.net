<div id="modalFilmGrade" class="modal fade" tabindex="-1">
    <div id="dialogContent" class="modal-dialog modalWindowGrade">
        <div class="modal-content ">
            <div class="modal-body modalGradeBody">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="modal-header-text">Ваша оценка</div>
                </div>
                <div class="modal-body-text">Оценки улучшают рекомендации</div>
                <div class="btn-group" role="group">
                    @for (var i = 1; i < 11; i++)
                    {
                        <button type="button" class="btn btn-outline-danger gradeButton shadow-none">
                            <div class="gradeNumber">
                                @i
                            </div>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>