            {
                <div class="row row-cols-6 gy-3  gx-4 [ container_film_card ]">
                    @foreach (var card in Model.FilmCards)
                    {
                        await Html.RenderPartialAsync("~/Views/Partials/FilmCard/FilmCard.cshtml", card);
