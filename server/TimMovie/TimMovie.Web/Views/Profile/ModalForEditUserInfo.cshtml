@model (TimMovie.Web.ViewModels.User.UserInfoViewModel UserInfo, IEnumerable<string> CountryNames)

<div class="modal fade edit-user-info__modal" id="editUserProfileInfo" data-bs-backdrop="static"
     data-bs-keyboard="true" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="d-flex flex-column justify-content-between align-items-center">
              <svg id="" class="close close-modal" xmlns="http://www.w3.org/2000/svg"
                   width="25px" height="25px" viewBox="0 0 94.926 94.926"
                   data-bs-dismiss="modal"
                   style="enable-background:new 0 0 94.926 94.926;"
                   xml:space="preserve" fill="grey">
                  <path d="M55.931,47.463L94.306,9.09c0.826-0.827,0.826-2.167,0-2.994L88.833,0.62C88.436,0.224,87.896,0,87.335,0
              		c-0.562,0-1.101,0.224-1.498,0.62L47.463,38.994L9.089,0.62c-0.795-0.795-2.202-0.794-2.995,0L0.622,6.096
              		c-0.827,0.827-0.827,2.167,0,2.994l38.374,38.373L0.622,85.836c-0.827,0.827-0.827,2.167,0,2.994l5.473,5.476
              		c0.397,0.396,0.936,0.62,1.498,0.62s1.1-0.224,1.497-0.62l38.374-38.374l38.374,38.374c0.397,0.396,0.937,0.62,1.498,0.62
              		s1.101-0.224,1.498-0.62l5.473-5.476c0.826-0.827,0.826-2.167,0-2.994L55.931,47.463z"/>
              </svg>
              <div class="d-flex flex-column justify-content-between align-items-center edit-user-info__container">
                  <div class="form-fields d-flex flex-column justify-content-between align-items-center">
                      <div class="d-flex flex-column align-items-center form-field edit-user-info__display-name-container">
                          <label for="displayNameInput">Никнейм</label>
                          <input id="displayNameInput" type="email" placeholder="" class="input-field edit-user-info__input"
                                 name="DisplayName" value="@Model.UserInfo.DisplayName">
                          <span id="displayNameError" class="edit-user-info__error-message-input"></span>
                      </div>
                      <div class="d-flex flex-column align-items-center edit-user-info__birthday-container">
                          <label for="birthDateInput" id="mw-100">Дата рождения</label>
                          <input id="birthDateInput" type="date" placeholder="" class="input-field edit-user-info__input"
                                 name="BirthDate" value="@Model.UserInfo.BirthDate?.ToString("yyyy-MM-dd")"
                                 min="1920-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                          <span id="birthDateError" class="edit-user-info__error-message-input"></span>
                      </div>
                      <div class="d-flex flex-column align-items-center">
                          <label for="countryNameInput">Страна</label>
                          <select id="countryNameInput" class="custom-select edit-user-info__input">
                              <option selected>Другая</option>
                              @foreach (var name in Model.CountryNames)
                              {
                                  <option value="@name" selected="@(Model.UserInfo.CountryName == name)">@name</option>
                              }
                          </select>
                      </div>
                  </div>
                  <button class="btn btn-outline-success mt-5" id="saveUserInfoBtn">Сохранить</button>
                  <div class="edit-user-info__common-error mt-2"></div>
              </div>
          </div>
      </div>
  </div>
</div>